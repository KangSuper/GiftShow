<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/weekly_child_list_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:src="@drawable/applogo" />

    <TextView
        android:id="@+id/weekly_child_list_appname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/weekly_child_list_image_view"
        android:layout_marginLeft="8dp"
        android:textSize="18dp"
        android:layout_toRightOf="@id/weekly_child_list_image_view"
        android:text="皇图" />

    <TextView
        android:id="@+id/weekly_child_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型:"
        android:layout_alignLeft="@id/weekly_child_list_appname_txt"
        android:layout_below="@id/weekly_child_list_appname_txt"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/weekly_child_list_typename_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weekly_child_list_appname_txt"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/weekly_child_list_type"
        android:text="角色"/>


    <TextView
        android:id="@+id/weekly_child_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/weekly_child_list_typename_txt"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/weekly_child_list_typename_txt"
        android:text="大小:"/>

    <TextView
        android:id="@+id/weekly_child_list_size_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/weekly_child_list_typename_txt"
        android:layout_marginLeft="5dp"
        android:text="251"
        android:layout_toRightOf="@id/weekly_child_list_size"/>

    <TextView
        android:id="@+id/weekly_child_list_descs_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/weekly_child_list_appname_txt"
        android:layout_alignBottom="@id/weekly_child_list_image_view"
        android:singleLine="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/weekly_child_list_check_btn"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:text="下载"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>