<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/weekly_top_img_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/applogo" />

    <com.xiekang.king.gift.customview.CircleImageView
        android:id="@+id/weekly_top_author_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/weekly_top_img_view"
        android:layout_marginBottom="100dp"
        android:src="@drawable/applogo"
        app:civ_border_color="#fe8801"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/weekly_top_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/weekly_top_author_img"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/weekly_top_author_img"
        android:text="dasasd656"
        android:textColor="#ffffff" />

    <ImageView
        android:src="@drawable/alpha_shape"
        android:layout_width="match_parent"
        android:layout_alignLeft="@id/weekly_top_desc_txt"
        android:layout_alignTop="@id/weekly_top_desc_txt"
        android:layout_alignBottom="@id/weekly_top_img_view"
        android:layout_height="wrap_content" />

</RelativeLayout>