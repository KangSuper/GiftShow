<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/baoda_grid_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/applogo"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/baoda_grid_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/baoda_grid_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
    android:textSize="12dp"/>

    <Button
        android:id="@+id/baoda_grid_down_btn"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:text="下载"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/baoda_grid_name_txt"
        android:background="@color/colorPrimary"/>

</RelativeLayout>