<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/baoda_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/baoda_item_g_biao"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/baoda_item_image_view"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/g_biao" />

    <TextView
        android:id="@+id/baoda_item_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/baoda_item_image_view"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/baoda_item_g_biao"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/baoda_item_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/baoda_item_time_txt"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</RelativeLayout>