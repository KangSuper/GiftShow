<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/weekly_item_game_image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/weekly_item_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/weekly_item_game_image_view"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <com.xiekang.king.gift.customview.CircleImageView
        android:id="@+id/weekly_item_author_iamge_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/weekly_item_game_image_view"
        android:layout_alignRight="@id/weekly_item_game_image_view"
        android:layout_marginRight="15dp"
        app:civ_border_color="#fe8801"
        app:civ_border_width="3dp" />
</RelativeLayout>