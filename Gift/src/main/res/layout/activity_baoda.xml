<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiekang.king.gift.BaodaActivity">

    <ImageView
        android:id="@+id/baoda_details_logo_img"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/baoda_details_clock"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/g_biao"
        android:layout_alignBottom="@id/baoda_details_logo_img"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/baoda_details_addtime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_alignBottom="@id/baoda_details_logo_img"
        android:layout_toRightOf="@id/baoda_details_clock"
        android:layout_marginLeft="2dp"/>

    <TextView
        android:id="@+id/baoda_details_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导读:"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/baoda_details_logo_img"/>
    <TextView
        android:id="@+id/baoda_details_descs_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/baoda_details_guide"
        android:layout_toRightOf="@id/baoda_details_guide"
        android:layout_marginLeft="3dp"/>

    <GridView
        android:id="@+id/baoda_details_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/baoda_details_descs_txt"
        android:numColumns="4"/>
</RelativeLayout>
