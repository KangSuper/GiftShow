<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.xiekang.king.gift.YouxiDetailsActivity">

    <ImageView
        android:id="@+id/yxdetails_logo_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/applogo" />

    <TextView
        android:id="@+id/yxdetails_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/yxdetails_logo_image"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/yxdetails_typename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/yxdetails_name_txt"
        android:layout_below="@id/yxdetails_name_txt"
        android:layout_marginTop="5dp"
        android:text="类型:" />

    <TextView
        android:id="@+id/yxdetails_typename_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yxdetails_typename"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/yxdetails_typename" />

    <TextView
        android:id="@+id/yxdetails_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yxdetails_logo_image"
        android:layout_alignLeft="@id/yxdetails_typename"
        android:text="大小:" />

    <TextView
        android:id="@+id/yxdetails_size_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/yxdetails_logo_image"
        android:layout_toRightOf="@id/yxdetails_size" />

    <android.support.v4.view.ViewPager
        android:id="@+id/yxdetails_pager_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/yxdetails_logo_image"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/yxdetails_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yxdetails_pager_view"
        android:text="游戏介绍"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/yxdetails_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yxdetails_jieshao"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/yxdetails_down_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="立即下载"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/yxdetails_down_btn"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary" />

</RelativeLayout>
