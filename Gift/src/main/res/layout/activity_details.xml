<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.xiekang.king.gift.DetailsActivity">

    <RelativeLayout
        android:id="@+id/details_relative"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/transparent" />

    <com.xiekang.king.gift.customview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/details_circle_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/applogo"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="4dp" />

    <TextView
        android:id="@+id/details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/details_relative"
        android:text="有效期:"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/details_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/details_time"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/details_time"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/details_least_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/details_relative"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/details_relative"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/details_least_number"
        android:text="礼包剩余:"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_relative"
        android:layout_marginTop="15dp"
        android:text="礼包说明"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_below="@id/text1"
        android:background="#36c77b" />

    <TextView
        android:id="@+id/details_explains_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="15dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_explains_text"
        android:layout_marginTop="15dp"
        android:text="兑换方式"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_below="@id/text2"
        android:background="#36c77b" />

    <TextView
        android:id="@+id/details_descs_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="15dp"
        android:textSize="15dp" />


    <Button
        android:id="@+id/details_get_btn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="立即领取"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
