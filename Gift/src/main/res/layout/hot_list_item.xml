<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/hot_list_logo_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:src="@drawable/applogo" />

    <TextView
        android:id="@+id/hot_list_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/hot_list_logo_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/hot_list_logo_image"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/hot_list_typename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/hot_list_name_txt"
        android:layout_below="@id/hot_list_name_txt"
        android:layout_marginTop="13dp"
        android:text="类型:" />

    <TextView
        android:id="@+id/hot_list_typename_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_list_typename"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/hot_list_typename" />

    <TextView
        android:id="@+id/hot_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_list_logo_image"
        android:layout_alignLeft="@id/hot_list_typename"
        android:text="大小:" />

    <TextView
        android:id="@+id/hot_list_size_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/hot_list_logo_image"
        android:layout_toRightOf="@id/hot_list_size" />


    <TextView
        android:id="@+id/hot_list_clicks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="人在玩"
        android:textColor="#ececec" />

    <TextView
        android:id="@+id/hot_list_clicks_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/hot_list_clicks"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>